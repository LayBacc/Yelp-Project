<div class="row text-center col-md-6 col-md-offset-3">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control signin-field" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control signin-field" %>

    <%= f.submit "Log in", class: "btn btn-primary btn-large" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
